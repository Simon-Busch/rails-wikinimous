<h1>Here is the list of all your articles bro 🧐</h1>

<ul class ="list-group">
  <% @articles.each do |article|%>
    <li class="list-group-item"> <%= link_to  "🚫 ⌲", destroy_article_path(article.id), method: :delete, data: {confirm: 'Do you want to delete this post ?'}%>
    <%= link_to article.title, article_path(article) %>
    </li>
  <%end%>
</ul>

<%= link_to  "Create an article", articles_new_path,  class:"btn btn-primary"%>